{
    "name": "images-of-the-world",
    "version": "1.0.0",
    "description": "A job application test turned side project",
    "repository": "git@github.com:alessandrojcm/images-of-the-world.git",
    "author": "Alessandro Cuppari <me@alessandrojcm.dev>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "lint-staged": "lint-staged",
        "develop": "yarn start",
        "start": "yarn concurrently 'yarn serve:app' 'yarn serve:locales'",
        "build": "parcel build ./src/index.html --public-url '/'",
        "serve:app": "parcel ./src/index.html --open --public-url '/'",
        "serve:locales": "yarn live-server ./static --port=12345 --watch=./static/locales --no-browser",
        "test": "yarn jest --maxWorkers=4"
    },
    "devDependencies": {
        "@babel/core": "^7.10.4",
        "@babel/plugin-transform-react-jsx": "^7.10.4",
        "@babel/preset-env": "^7.10.4",
        "@babel/preset-react": "^7.10.4",
        "@babel/preset-typescript": "^7.10.4",
        "@emotion/babel-plugin-jsx-pragmatic": "^0.1.5",
        "@parcel/transformer-react-refresh-wrap": "^2.0.0-alpha.3",
        "@parcel/transformer-svg-react": "^2.0.0-nightly.1739",
        "@parcel/validator-eslint": "^2.0.0-alpha.3",
        "@parcel/validator-typescript": "^2.0.0-alpha.3",
        "@testing-library/dom": "^7.20.0",
        "@testing-library/jest-dom": "^5.11.0",
        "@testing-library/react": "^10.4.5",
        "@testing-library/user-event": "^12.0.11",
        "@types/jest": "^26.0.4",
        "@types/reach__menu-button": "^0.1.0",
        "@types/react": "^16.9.43",
        "@types/react-dom": "^16.9.8",
        "@types/react-helmet": "^6.0.0",
        "@types/react-query": "^1.1.2",
        "@types/react-router-dom": "^5.1.5",
        "@typescript-eslint/eslint-plugin": "^3.6.0",
        "@typescript-eslint/parser": "^3.6.0",
        "babel-jest": "^26.1.0",
        "babel-plugin-macros": "^2.8.0",
        "babel-plugin-transform-inline-environment-variables": "^0.4.3",
        "babel-plugin-transform-react-jsx": "^6.24.1",
        "concurrently": "^5.2.0",
        "eslint": "^7.4.0",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-react": "^7.20.0",
        "eslint-plugin-react-hooks": "^4.0.7",
        "http-proxy-middleware": "^1.0.5",
        "husky": "^4.2.5",
        "jest": "^26.1.0",
        "jest-canvas-mock": "^2.2.0",
        "jest-emotion": "^10.0.32",
        "jsdom": "^16.3.0",
        "lint-staged": "^10.2.11",
        "live-server": "^1.2.1",
        "parcel": "^2.0.0-beta.1",
        "prettier": "^2.0.5",
        "ts-jest": "^26.1.1",
        "typescript": "^3.9.6"
    },
    "dependencies": {
        "@emotion/core": "^10.0.28",
        "@emotion/css": "^10.0.27",
        "@emotion/styled": "^10.0.27",
        "@reach/menu-button": "^0.10.5",
        "i18next": "^19.6.0",
        "i18next-http-backend": "^1.0.16",
        "ky": "^0.20.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-helmet": "^6.1.0",
        "react-i18next": "^11.7.0",
        "react-query": "^2.4.15",
        "react-router-dom": "^5.2.0",
        "react-useanimations": "^2.0.0",
        "rxjs": "^6.6.0",
        "tailwindcss": "^1.4.6",
        "tailwindcss-animations": "^2.0.0",
        "twin.macro": "^1.5.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "test"
        }
    },
    "lint-staged": {
        "*.{tsx,ts}": [
            "eslint --ext",
            "prettier --write",
            "git add ."
        ]
    },
    "alias": {
        "static": "./static/*"
    },
    "browserslist": [
        "defaults",
        "not IE 11",
        "not IE_Mob 11",
        "maintained node versions"
    ]
}
