{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "jsx": "react",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "~/app/*": ["./src/*"],
            "static/*": ["./static/*"]
        },
        "typeRoots": ["node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*", "tailwind.config.js", "src/types/*"]
}
